        /* Stylování tabulky */
table {
  width: 100%;
  border-collapse: collapse;
  border: none;
  overflow: hidden;
  border-radius: 10px;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
  font-family: Arial, sans-serif;
}

/* Stylování záhlaví tabulky */
thead {
  background-color: #ee6c6c34;
}

th {
  padding: 15px;
  text-align: left;
  border-bottom: 1px solid #ff000050;
  font-weight: bold;
}

/* Stylování buněk tabulky */
td {
  padding: 15px;
  text-align: left;
  border-bottom: 1px solid #ff000041;
  position: relative;
}

/* Uzavřené buňky */
td:before,
td:after {
  content: "";
  position: absolute;
  top: 0;
  bottom: 0;
  width: 10px;
  background-color: #6b4be000;
}

td:before {
  left: -10px;
  box-shadow: inset 10px 0 10px -10px rgba(0, 0, 0, 0.1);
}

td:after {
  right: -10px;
  box-shadow: inset -10px 0 10px -10px rgba(0, 0, 0, 0.1);
}

/* Přidání alternativního barevného pozadí řádků */
tbody tr:nth-child(even) {
  background-color: #ff000038;
}

/* Změna barvy po najetí myší */
tbody tr:hover {
  background-color: #02000046;
  transition: background-color 0.3s ease;
}

/* Stylování prvního sloupce */
td:first-child {
  font-weight: bold;
}

/* Stylování posledního sloupce */
td:last-child {
  text-align: right;
}

/* Stylování horního rámečku */
thead th:first-child {
  border-top-left-radius: 10px;
}

thead th:last-child {
  border-top-right-radius: 10px;
}

/* Stylování spodního rámečku */
tbody tr:last-child td:first-child {
  border-bottom-left-radius: 10px;
}

tbody tr:last-child td:last-child {
  border-bottom-right-radius: 10px;
}
 /* Styl pro odkazy */
 a {
            color: blue; /* Barva odkazu (můžete změnit na libovolnou) */
